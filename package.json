{
  "name": "StrataRegula",
  "displayName": "StrataRegula",
  "publisher": "Unizontechcoltd",
  "description": "動的設定ファイルの学習型インテリセンス（YAML補完）",
  "version": "0.2.1",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "YAML",
    "LSP",
    "IntelliSense",
    "Config",
    "StrataRegula",
    "Pattern Compiler",
    "Completion"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "workspaceContains:**/*.yaml",
    "onCommand:strataregulaLsp.restartServer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "strataregula-yaml",
        "aliases": [
          "StrataRegula YAML",
          "strataregula"
        ],
        "extensions": [
          ".yaml",
          ".yml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "strataregula-yaml",
        "scopeName": "source.yaml.strataregula",
        "path": "./syntaxes/strataregula.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "strataregulaLsp.restartServer",
        "title": "StrataRegula: Restart Server",
        "category": "StrataRegula"
      },
      {
        "command": "strataregula.compile",
        "title": "Compile Configuration",
        "category": "StrataRegula"
      },
      {
        "command": "strataregula.preview",
        "title": "Preview Compiled Output",
        "category": "StrataRegula"
      },
      {
        "command": "strataregula.doctor",
        "title": "Check Environment",
        "category": "StrataRegula"
      },
      {
        "command": "strataregula.reindex",
        "title": "Reindex",
        "category": "StrataRegula"
      },
      {
        "command": "strataregula.resetCache",
        "title": "Reset/Flush Cache",
        "category": "StrataRegula"
      },
      {
        "command": "strataregula.showStats",
        "title": "Show Index Stats",
        "category": "StrataRegula"
      },
      {
        "command": "strataregula.generateProtocol",
        "title": "Generate Python Protocols",
        "category": "StrataRegula"
      },
      {
        "command": "strataregula.showStatsWebView",
        "title": "Show Index Stats (Web View)",
        "category": "StrataRegula"
      },
      {
        "command": "strataregula.showKernelStats",
        "title": "Show Kernel Statistics (v0.3.0)",
        "category": "StrataRegula"
      }
    ],
    "configuration": {
      "title": "StrataRegula LSP",
      "properties": {
        "strataregulaLsp.telemetry": {
          "type": "boolean",
          "default": false,
          "description": "匿名テレメトリ（デフォルトOFF）"
        },
        "strataregulaLsp.maxSuggestions": {
          "type": "number",
          "default": 6,
          "minimum": 1,
          "maximum": 20,
          "description": "補完候補の最大数"
        },
        "strataregula.index.include": {
          "type": "array",
          "default": [
            "config/**/*.y?(a)ml",
            "apps/*/config/**/*.y?(a)ml",
            "services/*/config/**/*.y?(a)ml",
            ".config/strata/**/*.y?(a)ml",
            "**/*.y?(a)ml"
          ],
          "description": "インデックス対象パターン（全YAMLファイル対象）"
        },
        "strataregula.index.exclude": {
          "type": "array",
          "default": [
            "**/*/*/*/*/*/*/**",
            "**/node_modules/**",
            "**/.git/**",
            "**/.venv/**",
            "**/__pycache__/**",
            "**/dist/**",
            "**/build/**",
            "**/out/**",
            "**/.next/**",
            "**/.nuxt/**",
            "**/.cache/**",
            "**/coverage/**",
            "**/tmp/**",
            "**/tests/**/fixtures/**"
          ],
          "description": "インデックス除外パターン（6階層目以降とノイズを除外）"
        },
        "strataregula.index.persist": {
          "type": "boolean",
          "default": true,
          "description": "起動時にキャッシュ復元"
        },
        "strataregula.index.watch": {
          "type": "boolean",
          "default": true,
          "description": "変更差分だけ再学習"
        },
        "strataregula.index.maxFiles": {
          "type": "number",
          "default": 10000,
          "minimum": 100,
          "maximum": 100000,
          "description": "インデックス対象の最大ファイル数"
        },
        "strataregula.index.maxFileSizeKB": {
          "type": "number",
          "default": 1024,
          "minimum": 10,
          "maximum": 10240,
          "description": "インデックス対象の最大ファイルサイズ（KB）"
        },
        "strataregula.statusBar.enabled": {
          "type": "boolean",
          "default": true,
          "description": "ステータスバーにインデックス状況を表示"
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .yaml || resourceExtname == .yml",
          "command": "strataregula.compile",
          "group": "StrataRegula"
        }
      ]
    },
    "snippets": [
      {
        "language": "yaml",
        "path": "./snippets/strataregula.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsc -p ./",
    "build": "npm run compile",
    "watch": "tsc -watch -p ./",
    "lint": "echo 'eslint .'",
    "test": "echo 'No test framework configured yet'",
    "test:cov": "nyc -r text -r lcov npm test",
    "package": "vsce package",
    "publish": "vsce publish --pat \"${VSCE_PAT:-}\""
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.6.0",
    "nyc": "^15.1.0",
    "typescript": "^5.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unizontech/strataregula-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/unizontech/strataregula-vscode/issues"
  },
  "homepage": "https://github.com/unizontech/strataregula-vscode#readme",
  "author": "unizontech",
  "license": "Apache-2.0"
}

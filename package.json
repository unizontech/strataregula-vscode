{
  "name": "strataregula-vscode",
  "displayName": "StrataRegula",
  "description": "YAML Configuration Pattern Compiler support for VS Code",
  "version": "0.1.0",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Language Packs"
  ],
  "keywords": [
    "yaml",
    "configuration",
    "pattern",
    "strataregula",
    "infrastructure"
  ],
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "strataregula-yaml",
        "aliases": ["StrataRegula YAML", "strataregula"],
        "extensions": [".yaml", ".yml"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "strataregula-yaml",
        "scopeName": "source.yaml.strataregula",
        "path": "./syntaxes/strataregula.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "strataregula.compile",
        "title": "Compile Configuration",
        "category": "StrataRegula"
      },
      {
        "command": "strataregula.preview",
        "title": "Preview Compiled Output",
        "category": "StrataRegula"
      },
      {
        "command": "strataregula.doctor",
        "title": "Check Environment",
        "category": "StrataRegula"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .yaml || resourceExtname == .yml",
          "command": "strataregula.compile",
          "group": "StrataRegula"
        }
      ]
    },
    "snippets": [
      {
        "language": "yaml",
        "path": "./snippets/strataregula.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/strataregula/strataregula-vscode"
  },
  "bugs": {
    "url": "https://github.com/strataregula/strataregula-vscode/issues"
  },
  "homepage": "https://github.com/strataregula/strataregula-vscode#readme",
  "author": "StrataRegula Team",
  "license": "MIT"
}
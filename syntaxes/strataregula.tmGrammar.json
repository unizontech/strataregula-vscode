{
    "name": "StrataRegula YAML",
    "scopeName": "source.yaml.strataregula",
    "fileTypes": ["yaml", "yml"],
    "patterns": [
        {
            "include": "source.yaml"
        },
        {
            "name": "keyword.operator.wildcard.strataregula",
            "match": "\\*\\*?"
        },
        {
            "name": "entity.name.tag.strataregula.pattern",
            "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*\\.)+\\*\\*?\\.([a-zA-Z_][a-zA-Z0-9_]*\\b)",
            "captures": {
                "0": {
                    "name": "entity.name.tag.strataregula.pattern"
                }
            }
        },
        {
            "name": "support.type.strataregula.config-key",
            "match": "^\\s*(service_times|resource_limits|traffic_routing|capacity_planning)\\s*:",
            "captures": {
                "1": {
                    "name": "support.type.strataregula.config-key"
                }
            }
        },
        {
            "name": "variable.other.strataregula.wildcard-pattern",
            "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\.\\*(\\.([a-zA-Z_][a-zA-Z0-9_]*))?",
            "captures": {
                "1": {
                    "name": "support.class.strataregula.service-prefix"
                },
                "3": {
                    "name": "support.class.strataregula.service-suffix"
                }
            }
        },
        {
            "name": "constant.numeric.strataregula.value",
            "match": ":\\s*([0-9]+(?:\\.[0-9]+)?)",
            "captures": {
                "1": {
                    "name": "constant.numeric.strataregula.value"
                }
            }
        }
    ]
}